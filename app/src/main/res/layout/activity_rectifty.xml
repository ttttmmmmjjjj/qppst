<?xml version="1.0" encoding="UTF-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cccccc"
        android:orientation="vertical" >

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="50dp">
        </TabWidget>

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="4">

            <LinearLayout
                android:id="@+id/page1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/StopSupplyType1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/b_StopSupplyType1"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <CheckBox
                            android:id="@+id/StopSupplyType2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/b_StopSupplyType2"
                            android:textColor="#000000"
                            android:textSize="18sp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <CheckBox
                                android:id="@+id/StopSupplyType3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/b_StopSupplyType3"
                                android:textColor="#000000"
                                android:layout_weight="1"
                                android:textSize="18sp" />

                            <CheckBox
                                android:id="@+id/StopSupplyType4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/b_StopSupplyType4"
                                android:textColor="#000000"
                                android:layout_weight="1"
                                android:textSize="18sp" />
                        </LinearLayout>


                        <CheckBox
                            android:id="@+id/StopSupplyType5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/b_StopSupplyType5"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <CheckBox
                            android:id="@+id/StopSupplyType6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/b_StopSupplyType6"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <CheckBox
                            android:id="@+id/StopSupplyType7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/b_StopSupplyType7"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <CheckBox
                            android:id="@+id/StopSupplyType8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/b_StopSupplyType8"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <CheckBox
                            android:id="@+id/StopSupplyType9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/b_StopSupplyType9"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <CheckBox
                            android:id="@+id/StopSupplyType10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/b_StopSupplyType10"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <CheckBox
                            android:id="@+id/StopSupplyType11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/b_StopSupplyType11"
                            android:textColor="#000000"
                            android:visibility="gone"
                            android:textSize="18sp" />

                        <CheckBox
                            android:id="@+id/StopSupplyType12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/b_StopSupplyType12"
                            android:textColor="#000000"
                            android:visibility="gone"
                            android:textSize="18sp" />

                        <CheckBox
                            android:id="@+id/StopSupplyType13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/b_StopSupplyType13"
                            android:textColor="#000000"
                            android:visibility="gone"
                            android:textSize="18sp" />

                        <CheckBox
                            android:id="@+id/StopSupplyType14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/b_StopSupplyType14"
                            android:textColor="#000000"
                            android:visibility="gone"
                            android:textSize="18sp" />

                        <CheckBox
                            android:id="@+id/StopSupplyType15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/b_StopSupplyType15"
                            android:textColor="#000000"
                            android:visibility="gone"
                            android:textSize="18sp" />

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/page2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/UnInstallType1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/b_UnInstallType1"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <CheckBox
                            android:id="@+id/UnInstallType2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/b_UnInstallType2"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <CheckBox
                            android:id="@+id/UnInstallType3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/b_UnInstallType3"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <CheckBox
                            android:id="@+id/UnInstallType4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/b_UnInstallType4"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <CheckBox
                            android:id="@+id/UnInstallType5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/b_UnInstallType5"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <CheckBox
                            android:id="@+id/UnInstallType6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/b_UnInstallType6"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <CheckBox
                            android:id="@+id/UnInstallType7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/b_UnInstallType7"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <CheckBox
                            android:id="@+id/UnInstallType8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/b_UnInstallType8"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <CheckBox
                            android:id="@+id/UnInstallType9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/b_UnInstallType9"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <CheckBox
                            android:id="@+id/UnInstallType10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/b_UnInstallType10"
                            android:textColor="#000000"
                            android:textSize="18sp" />.

                        <CheckBox
                            android:id="@+id/UnInstallType11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/b_UnInstallType11"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <CheckBox
                            android:id="@+id/UnInstallType12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/b_UnInstallType12"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <CheckBox
                            android:id="@+id/UnInstallType13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/b_UnInstallType13"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <CheckBox
                            android:id="@+id/UnInstallType14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/b_UnInstallType14"
                            android:textColor="#000000"
                            android:visibility="gone"
                            android:textSize="18sp" />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </FrameLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="#ffff3f"
            android:padding="15dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="0dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="整改结果"
                android:visibility="gone"
                android:layout_marginTop="6dp"
                android:textColor="#000000"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/update"
                    android:layout_marginLeft="15dp"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/repair"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:text="@string/repair"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/stop"
                    android:layout_marginLeft="15dp"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:text="@string/result"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="4dp"
            android:layout_marginTop="16dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/btn_delivertask_selector"
                android:drawableTop="@drawable/camera"
                android:onClick="takePhoto"
                android:text="拍照"
                android:textSize="18sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@drawable/btn_delivertask_selector"
                android:drawableTop="@drawable/view"
                android:onClick="preview"
                android:text="预览"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/btn_delivertask_selector"
                android:drawableTop="@drawable/print"
                android:onClick="save"
                android:text="保存"
                android:textSize="18sp" />

            <Button
                android:id="@+id/upload"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@drawable/btn_delivertask_selector"
                android:drawableTop="@drawable/submit"
                android:onClick="upload"
                android:text="上传"
                android:textSize="18sp" />
        </TableRow>
    </LinearLayout>

</TabHost>
