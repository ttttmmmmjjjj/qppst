<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#cccccc"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#006633"
        android:gravity="center"
        android:orientation="horizontal"
       >
        <TextView
            android:id="@+id/txt_warn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#006633"
            android:gravity="center"
            android:text="任务概况"
            android:visibility="gone"
            android:textColor="#006633"
            android:textStyle="bold"
            android:textSize="18sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#006633"
            android:gravity="center"
            android:text="明日预约订单"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="22sp" />
        <TextView
            android:id="@+id/txt_warn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#cccccc"
            android:gravity="center"
            android:text="新消息"
            android:visibility="gone"
            android:textColor="#006633"
            android:textStyle="bold"
            android:textSize="20sp" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/linearlayout"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp">

            <TextView
                android:id="@+id/txt_stationName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text=""
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_operator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text=""
                android:textColor="#000000"
                android:textSize="18sp" />
        </LinearLayout>


    <ListView
        android:id="@+id/lv_saleInfo"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="1"
        android:background="@drawable/linearlayout"
        android:divider="#666666"
        android:dividerHeight="3px"
        android:padding="4dp"></ListView>

</LinearLayout>

